int main()
{
	int a[5],i,sum=0,max;
	printf("enter the number of array:");
	for(i=0;i<5;++i)
	{
	   scanf("%d",&a[i]);
	   sum+=a[i];
    }
    max=a[0];
    
    for(i=0;i<5;++i)
    {
    	if(max<a[i])
    	{
    		max=a[i];
		}
	
	}

	printf("the sum is:%d\n",sum);
	printf("the max value is:%d",a[i]);

}
