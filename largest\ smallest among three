#include<stdio.h>
int main()
{
    int n1, n2, n3,l,s;
    printf("ENTER FIRST NUMBER A :: ");
    scanf("%d", &n1);
    printf("\nENTER SECOND NUMBER B :: ");
    scanf("%d",&n2);
    printf("\nENTER THIRD NUMBER C :: ");
    scanf("%d",&n3);

    printf("\nTHE BIGGEST NUMBER IS :: ");
    if( (n1 > n2) && (n1 > n3) )
    {
    	printf("%d", n1);
    	l=n1;
	}
    else if((n2 > n3) && (n2 > n1))
    {
    	printf("%d", n2);
    	l=n2;
	}    
    else
    {
    	printf("%d", n3);
    	l=n3;
	}
    if(l%2!=0)
    {
    	printf("the number is odd");
	}
     else
	 {
	    printf("the number is even");
	 }
    
    printf("\n\nTHE SMALlEST NUMBER IS :: ");
    if( (n1 < n2) && (n1 < n3) )
    {
    	printf("%d", n1);
    	s=n1;
	}
    else if((n2 < n3) && (n2<n1))
    {
    	printf("%d", n2);
    	s = n2;
	}
    else
    {
    	printf("%d", n3);
    	s=n3;
	}
    if(s%2==0)
    {
    	printf("the number is even");
	}
     else
	 {
	    printf("the number is odd");
	 }
    return 0;
}

